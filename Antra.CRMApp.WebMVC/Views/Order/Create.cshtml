@model OrderModel
<form asp-action="Create" asp-controller="Order" method="post">
    <h1 class="display-6">Add New Order</h1>
    <hr/>
    <div class="container">
        <div class="row">
            <div class="col mb-5">
                <label asp-for="Id"></label>
                <input asp-for="Id" class="form-control"/>
                <span asp-validation-for="Id"></span>
            </div>
        </div>
        <input type="submit" class="btn-primary btn" value="Create Order"/>
    </div>
</form>