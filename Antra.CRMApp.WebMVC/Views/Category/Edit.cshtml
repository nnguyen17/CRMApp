@model CategoryModel

@if (ViewBag.IsEdit==true)
{
    
    
        <div class="container">
            <di class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>Category Updated Successfully. Go to <a asp-action="Index" asp-controller="Category" >Index</a> </strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
}

<form asp-action="Edit" asp-controller="Category" method="post">
    <h1 class="display-6">Edit Category</h1>
    <hr/>
    <div class="container">
        <div class="row">
            <div class="col mb-5">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="row">
            <div class="col mb-5">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control"/>
                <span asp-validation-for="Description"></span>
            </div>
        </div>
        <input type="submit" class="btn-primary btn" value="Edit Category"/>
    </div>
</form>