@model IEnumerable<CustomerResponseModel>

<a asp-action="Create" asp-controller="Customer" class="btn bg-success" >Add Customer</a>
<div class="container">
    <div class="row">
        @foreach(var item in Model)
        {
            <div class="col-3">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Address</p>
                    <a asp-action="Edit" asp-controller="Customer" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a class="btn bg-danger" asp-action="Delete" asp-controller="Customer" asp-route-id="@item.Id">Delete</a>
                </div>
            </div>
            </div>
        }
    </div>
</div>
